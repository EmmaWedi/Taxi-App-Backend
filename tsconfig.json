{
    "compileOnSave": false,
    "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./build",
      "sourceMap": true,
      "declaration": false,
      "moduleResolution": "node",
      "target": "es5",
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["node_modules/@types"],
      "lib": ["es2020"]
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}